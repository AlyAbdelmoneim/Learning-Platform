@model List<TestApp.Models.Course>

<h1>Courses</h1>

<!-- Add button to create a new personalization profile -->
@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
        <tr>
            <th>Course ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Credit Points</th>
            <th>Difficulty Level</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.CourseID</td>
                <td>@course.Title</td>
                <td>@course.course_description</td>
                <td>@course.credit_points</td>
                <td>@course.difficulty_level</td>

                <td>
                    <a asp-action="Modules" asp-controller="Learner" asp-route-courseID="@course.CourseID"
                       class="btn btn-primary">View Modules</a>
                    <a asp-action="Leaderboard" asp-controller="Learner" asp-route-leaderboardId="@course.CourseID"
                       class="btn btn-success">View Leaderboard</a>
                </td>

            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>No personalization profiles found.</p>
}