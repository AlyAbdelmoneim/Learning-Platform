@model List<HighestGradeDTO>

<h1>Highest Grades</h1>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Course ID</th>
                <th>Title</th>
                <th>Total Marks</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var grade in Model)
            {
                <tr>
                    <td>@grade.CourseID</td>
                    <td>@grade.Title</td>
                    <td>@grade.total_marks</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No data found.</p>
}
