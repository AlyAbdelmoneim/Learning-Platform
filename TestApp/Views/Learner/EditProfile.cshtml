@model TestApp.Models.Learner

<h2>Edit Profile</h2>

<form asp-action="EditProfile" method="post">
    <input type="hidden" asp-for="LearnerID" />
    
    <div class="form-group">
        <label asp-for="first_name"></label>
        <input asp-for="first_name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="last_name"></label>
        <input asp-for="last_name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="birth_date"></label>
        <input asp-for="birth_date" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label asp-for="gender"></label>
        <select asp-for="gender" class="form-control">
            <option value="M">Male</option>
            <option value="F">Female</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="cultural_background"></label>
        <input asp-for="cultural_background" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="LearnerDashboard" class="btn btn-secondary">Cancel</a>
</form>