@{
    ViewData["Title"] = "Add New Goal";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="AddGoal" method="post">
    <div class="form-group">
        <label for="goalDescription">Goal Description</label>
        <input type="text" class="form-control" id="goalDescription" name="GoalDescription" required />
    </div>

    <div class="form-group">
        <label for="deadline">Deadline</label>
        <input type="date" class="form-control" id="deadline" name="Deadline" required />
    </div>

    <div class="form-group">
        <label for="goalStatus">Goal Status</label>
        <select class="form-control" id="goalStatus" name="GoalStatus" required>
            <option value="Active">Active</option>
            <option value="Completed">Completed</option>
            <option value="Pending">Pending</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Add Goal</button>
</form>