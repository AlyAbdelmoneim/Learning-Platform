@{
    ViewData["Title"] = "Instructors Page";
}

<h1>All Instructors</h1>

<table class="table">
    <thead>
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Email</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var instructor in Model)
    {
        <tr>
            <td>@instructor.InstructorID</td>
            <td>@instructor.instructor_name</td>
            <td>@instructor.email</td>
            <td>
                <form method="post" action="@Url.Action("DeleteInstructor", "Admin", new { id = instructor.InstructorID })" style="display:inline;">
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this instructor?');">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>