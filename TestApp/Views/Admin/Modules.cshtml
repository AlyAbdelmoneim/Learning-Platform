@model Tuple<List<TestApp.Models.Module>, TestApp.Models.ViewModels.IntDTO>

<h1>Modules</h1>

@if (Model != null && Model.Item1.Any())
{
    <table class="table">
        <thead>
        <tr>
            <th>Title</th>
            <th>Difficulty</th>
            <th>Assessments</th>
            <th>Content URL</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var module in Model.Item1)
        {
            <tr>
                <td>@module.Title</td>
                <td>@module.difficulty</td>
                <td>@module.Assessments</td>
                <td>@module.contentURL</td>
                
                <td>
                    <a asp-action="DiscussionForums" asp-controller="Admin" asp-route-courseID="@Model.Item2.Value" asp-route-moduleID="@module.ModuleID" class="btn btn-primary">View Discussion Forums</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>No Modules found.</p>
}