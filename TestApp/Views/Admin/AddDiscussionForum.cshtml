@model Tuple<TestApp.Models.ViewModels.IntDTO, TestApp.Models.ViewModels.IntDTO>
@{
    ViewData["Title"] = "Add Discussion Forum";
}

<h1>@ViewData["Title"]</h1>

<!-- Display success or error message if any -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<form method="post" asp-action="AddDiscussionForum">
    <!-- Hidden fields to pass CourseID and ModuleID -->
    <input type="hidden" name="CourseID" value="@Model.Item1.Value" />
    <input type="hidden" name="ModuleID" value="@Model.Item2.Value" />

    <div class="form-group">
        <label for="title">Discussion Title</label>
        <input type="text" class="form-control" id="title" name="title" placeholder="Enter discussion title" required />
    </div>

    <div class="form-group">
        <label for="forum_description">Description</label>
        <textarea class="form-control" id="forum_description" name="forum_description" rows="4" placeholder="Enter discussion description" required></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Add Discussion</button>
</form>