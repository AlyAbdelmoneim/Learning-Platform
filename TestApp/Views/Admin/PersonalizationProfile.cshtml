@{
    ViewData["Title"] = "Learner Personalization Profile";
}

<h1>Personalization Profile for Learner: @Model.FirstOrDefault()?.Learner.first_name</h1>

<table class="table">
    <thead>
    <tr>
        <th>Profile ID</th>
        <th>Detail</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var profile in Model)
    {
        <tr>
            <td>@profile.ProfileID</td>
            <td>@profile.Detail</td>
            <td>
                <form method="post" action="@Url.Action("DeletePersonalization", "Admin", new { id = profile.ProfileID })" style="display:inline;">
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this personalization?');">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
