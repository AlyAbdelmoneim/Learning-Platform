@{
    ViewData["Title"] = "Learner Personalization Profile";
}

<h1>Personalization Profile for Learner</h1>

<table class="table">
    <thead>
    <tr>
        <th>Profile ID</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var profile in Model)
    {
        <tr>
            <td>@profile.ProfileID</td>
            <td>
                <form method="post" action="@Url.Action("DeletePersonalizationProfile", "Admin")">
                    <input type="hidden" name="id" value="@profile.ProfileID" />
                    <input type="hidden" name="learnerId" value="@profile.LearnerID" />
                    <button type="submit" class="btn btn-danger">Delete Profile</button>
                </form>

            </td>
        </tr>
    }
    </tbody>
</table>
