@model IEnumerable<TestApp.Models.ViewModels.RankingViewModel>

<h1>Leaderboard</h1>

<table class="table">
    <thead>
    <tr>
        <th>Rank</th>
        <th>Learner ID</th>
        <th>Total Points</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.rankNum</td>
            <td>@item.LearnerID</td>
            <td>@item.total_points</td>
        </tr>
    }
    </tbody>
</table>