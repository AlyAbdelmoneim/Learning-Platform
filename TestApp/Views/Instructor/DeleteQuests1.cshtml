@{
    ViewData["Title"] = "Delete Quest";
}

<h2>@ViewData["Title"]</h2>
<form asp-action="DeleteQuests" method="post">
    <div class="form-group">
        <label for="criteria">Criteria</label>
        <textarea class="form-control" id="criteria" name="criteria" rows="4" required></textarea>
    </div>
    <div class="form-group">
        <input type="submit" value="Delete Quest" class="btn btn-danger" />
    </div>
</form>