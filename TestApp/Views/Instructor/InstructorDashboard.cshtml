@model TestApp.Models.Instructor

<h2 class="text-center">Instructor Dashboard</h2>

<div class="card p-4 shadow-sm mb-4">
    <h3>Profile Information</h3>
    <p><strong>Name:</strong> @Model.instructor_name</p>
    <p><strong>Latest Qualification:</strong> @Model.latest_qualification</p>
    <p><strong>Expertise Area:</strong> @Model.expertise_area</p>
    <p><strong>Email:</strong> @Model.email</p>
</div>

<div class="d-flex justify-content-between">
    <a asp-action="EditInstructorProfile" asp-controller="Instructor" class="btn btn-primary">
        <i class="fas fa-edit"></i> Edit Profile
    </a>



    <form method="post" action="@Url.Action("DeleteInstructorAccount", new { instructorId = Model.InstructorID })" onsubmit="return confirm('Are you sure you want to delete your account?')" class="d-inline">
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash-alt"></i> Delete Account
        </button>
    </form>
</div>

<div class="admin-dashboard">
    <button onclick="window.location.href='@Url.Action("LearnersPage", "Instructor")'" class="btn btn-primary">View Learners</button>
</div>
