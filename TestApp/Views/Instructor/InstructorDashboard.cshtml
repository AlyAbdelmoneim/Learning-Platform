@model TestApp.Models.Instructor

<h2 class="text-center mb-4">Instructor Dashboard</h2>

<div class="card p-4 shadow-sm mb-4">
    <h3>Profile Information</h3>
    <p><strong>Name:</strong> @Model.instructor_name</p>
    <p><strong>Latest Qualification:</strong> @Model.latest_qualification</p>
    <p><strong>Expertise Area:</strong> @Model.expertise_area</p>
    <p><strong>Email:</strong> @Model.email</p>
</div>

<div class="row text-center mb-4">
    <div class="col-md-6">
        <a asp-action="EditInstructorProfile" asp-controller="Instructor" class="btn btn-primary w-100">
            <i class="fas fa-edit"></i> Edit Profile
        </a>
    </div>
    <div class="col-md-6">
        <form method="post" action="@Url.Action("DeleteInstructorAccount", new { instructorId = Model.InstructorID })"
              onsubmit="return confirm('Are you sure you want to delete your account?')">
            <button type="submit" class="btn btn-danger w-100">
                <i class="fas fa-trash-alt"></i> Delete Account
            </button>
        </form>
    </div>
</div>

<div class="row text-center">
    <div class="col-md-6 mb-3">
        <button onclick="window.location.href='@Url.Action("LearnersPage", "Instructor")'" class="btn btn-primary w-100">
            View Learners
        </button>
    </div>
    <div class="col-md-6 mb-3">
        <button onclick="window.location.href='@Url.Action("Courses", "Instructor")'" class="btn btn-primary w-100">
            View Courses
        </button>
    </div>
    <div class="col-md-6 mb-3">
        <button onclick="window.location.href='@Url.Action("Quests", "Instructor")'" class="btn btn-primary w-100">
            View Quests
        </button>
    </div>
    <div class="col-md-6 mb-3">
        <button onclick="window.location.href='@Url.Action("Achievements", "Instructor")'" class="btn btn-primary w-100">
            View Achievements
        </button>
    </div>
    <div class="col-md-6 mb-3">
        <button onclick="window.location.href='@Url.Action("FeedbackTrends", "Instructor")'" class="btn btn-primary w-100">
            <i class="fas fa-chart-line"></i> EmotionalFeedback Trends
        </button>
    </div>
    <div class="col-md-6 mb-3">
        <button onclick="window.location.href='@Url.Action("SendNotification1", "Instructor")'" class="btn btn-primary w-100">
            <i class="fas fa-chart-line"></i> Send Notification
        </button>
    </div>

</div>
