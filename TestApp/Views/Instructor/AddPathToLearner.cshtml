@{
    ViewData["Title"] = "Add Path to Learner";
}

<h2>@ViewData["Title"]</h2>

<!-- Display LearnerId and ProfileId for debugging -->
<div class="alert alert-info">
    <strong>Debug Info:</strong>
    <p><strong>LearnerId:</strong> @ViewData["LearnerId"]</p>
    <p><strong>ProfileId:</strong> @ViewData["ProfileId"]</p>
</div>

<form asp-action="AddPathToLearner" method="post">
    <!-- Hidden fields to hold LearnerId and ProfileId -->
    <input type="hidden" name="LearnerId" value="@ViewData["LearnerId"]" />
    <input type="hidden" name="ProfileId" value="@ViewData["ProfileId"]" />

    <div class="form-group">
        <label for="customContent">Custom Content</label>
        <textarea class="form-control" id="customContent" name="CustomContent" rows="4" required></textarea>
    </div>

    <div class="form-group">
        <label for="adaptiveRules">Adaptive Rules</label>
        <textarea class="form-control" id="adaptiveRules" name="AdaptiveRules" rows="4" required></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Add Path</button>
</form>