@model List<TestApp.Models.ViewModels.CollaborativeQuestsViewModel>

<h1>Collaborative Quests</h1>

<!-- Add button to create a new personalization profile -->
@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
        <tr>
            <th>Quest ID</th>
            <th>Title</th>
            <th>Description</th>
            <th>Difficulty Level</th>
            <th>Criteria</th>
            <th>Max Number of Participants</th>
            <th>Deadline</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var quest in Model)
        {
            <tr>
                <td>@quest.QuestID</td>
                <td>@quest.title</td>
                <td>@quest.quest_description</td>
                <td>@quest.difficulty_level</td>
                <td>@quest.criteria</td>
                <td>@quest.max_num_participants</td>
                <td>@quest.deadline</td>

                <td>
<a asp-action="UpdateDeadline1" asp-route-questsID="@quest.QuestID" class="btn btn-secondary">Update Deadline</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>No Available Collaborative Quests</p>
}
<a asp-action="AddCollaborativeQuest" asp-controller="Instructor" class="btn btn-primary">Add Collaborative Quest</a>
<a asp-action="DeleteQuests1" asp-controller="Instructor" class="btn btn-primary">Delete For a specific criteria</a>
