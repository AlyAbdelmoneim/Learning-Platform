@model TestApp.Models.ViewModels.UpdatedDeadlineViewModel

@{
    ViewData["Title"] = "Update Deadline";
}

<h2>Update Deadline</h2>

<form asp-action="UpdateDeadline" method="post">
    <input type="hidden" asp-for="questsID" />
    <div class="form-group">
        <label asp-for="deadline" class="control-label"></label>
        <input asp-for="deadline" class="form-control" type="datetime" />
        <span asp-validation-for="deadline" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Update Deadline" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}