@{
    ViewData["Title"] = "Add Achievement";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="AddAchievement" method="post">
    <div class="form-group">
        <label for="learnerID">Learner ID</label>
        <input type="number" id="learnerID" name="learnerID" class="form-control" required />
    </div>
<div class="form-group">
    <label for="badgeID">Badge ID</label>
    <select id="badgeID" name="badgeID" class="form-control" required>
        @for (int i = 1; i <= 10; i++)
        {
            <option value="@i">@i</option>
        }
    </select>
</div>
    <div class="form-group">
        <label for="description">Description</label>
        <textarea id="description" name="description" class="form-control" rows="3" required></textarea>
    </div>
    <div class="form-group">
        <label for="dateEarned">Date Earned</label>
        <input type="date" id="dateEarned" name="dateEarned" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="type">Type</label>
        <input type="text" id="type" name="type" class="form-control" required />
    </div>
    <div class="form-group">
        <input type="submit" value="Add Achievement" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}