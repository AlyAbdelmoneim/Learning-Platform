@{
    ViewData["Title"] = "Send Notification";
}

<h2>@ViewData["Title"]</h2>

<form method="post" asp-action="SendNotification2">
    <div class="form-group">
        <label for="message">Message</label>
        <textarea class="form-control" id="message" name="message" rows="4" placeholder="Enter your message" required></textarea>
    </div>
    <div class="form-group">
        <label for="urgencyLevel">Urgency Level</label>
        <select class="form-control" id="urgencyLevel" name="urgencyLevel" required>
            <option value="Low">Low</option>
            <option value="Medium">Medium</option>
            <option value="High">High</option>
        </select>
    </div>
    <div class="form-group">
        <label for="learnerId">Learner ID</label>
        <input type="number" class="form-control" id="learnerId" name="learnerId" placeholder="Enter learner ID" required />
    </div>
    <button type="submit" class="btn btn-primary">Send Notification</button>
</form>