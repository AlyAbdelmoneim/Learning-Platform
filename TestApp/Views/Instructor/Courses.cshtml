@model List<TestApp.Models.Course>

<h1>Courses</h1>

@if (TempData["SuccessMessage"] != null)
{
    <script>
        alert("@TempData["SuccessMessage"]");
    </script>
}

@if (TempData["ErrorMessage"] != null)
{
    <script>
        alert("@TempData["ErrorMessage"]");
    </script>
}

@if (Model != null && Model.Any())
{
    <table class="table" id="coursesTable">
        <thead>
            <tr>
                <th>Course ID</th>
                <th>Title</th>
                <th>Description</th>
                <th>Credit Points</th>
                <th>Difficulty Level</th>
                <th>Modules</th>
                <th>Activities</th>
                <th>Actions</th> <!-- Added Actions column -->
                <th>prerequisites</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model)
            {
                <tr id="course-row-@course.CourseID">
                    <td>@course.CourseID</td>
                    <td>@course.Title</td>
                    <td>@course.course_description</td>
                    <td>@course.credit_points</td>
                    <td>@course.difficulty_level</td>

                    <td>
                        <a asp-action="Modules" asp-controller="Instructor" asp-route-courseID="@course.CourseID" class="btn btn-primary">View Modules</a>
                    </td>
                    <td>
                        <a asp-action="Leaderboard" asp-controller="Instructor" asp-route-leaderboardId="@course.CourseID" class="btn btn-success">View Leaderboard</a>
                    </td>
                    <td>
                        <!-- Delete button -->
                        <form asp-action="DeleteCourse" asp-controller="Instructor" method="post" onsubmit="return confirm('Are you sure you want to delete this course?');">
                            <input type="hidden" name="courseID" value="@course.CourseID" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                    <td>
                        <!-- Button to trigger the modal -->
                        <button class="btn btn-outline-primary" data-bs-toggle="modal" data-bs-target="#learnersModal-@course.CourseID" data-courseid="@course.CourseID">
                            View Learners
                        </button>

                        <!-- Modal structure -->
                        <div class="modal fade" id="learnersModal-@course.CourseID" tabindex="-1" aria-labelledby="learnersModalLabel-@course.CourseID" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="learnersModalLabel-@course.CourseID">Learners who completed prerequisites for @course.Title</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body" id="learnersTableContainer-@course.CourseID">
                                        <!-- Learners table will be loaded here dynamically via AJAX -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Not teaching any courses</p>
}
<script>
    $(document).ready(function () {
        // Listen for the modal to be shown
        $('[data-bs-toggle="modal"]').on('click', function () {
            var courseId = $(this).data('courseid');  // Get course ID from the data attribute

            // Make an AJAX request to fetch learners
            $.ajax({
                url: '@Url.Action("ViewLearners", "Instructor")',  // Adjust according to your controller and action
                type: 'GET',
                data: { courseId: courseId },
                success: function (data) {
                    // Populate the modal with the learners table
                    $('#learnersTableContainer-' + courseId).html(data);
                }
            });
        });
    });
</script>